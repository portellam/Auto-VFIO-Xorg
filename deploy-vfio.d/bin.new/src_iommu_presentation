#!/bin/false

#
# Filename:       src_iommu_presentation
# Description:    Presentation logic for individual IOMMU groups.
# Author(s):      Alex Portell <github.com/portellam>
# Maintainer(s):  Alex Portell <github.com/portellam>
#

#
# TODO:
# - [ ] test.
#

#
# sources
#
  declare -g SRC_STR_SCRIPT_DIR="/usr/local/bin/"
  declare -g SRC_STR_SCRIPT_BIN_DIR="${SRC_STR_SCRIPT_DIR}deploy-vfio.d/"

  source "${SRC_STR_SCRIPT_BIN_DIR}src_print"
  source "${SRC_STR_SCRIPT_BIN_DIR}src_iommu_device_getters"
  source "${SRC_STR_SCRIPT_BIN_DIR}src_iommu_group_validation"

#
# logic
#
  #
  # DESC:   Determine if any devices are reserved for Host machine.
  # $1:     the array of reserved IOMMU groups for Host machine as a reference.
  # $2:     the array of reserved IOMMU groups with VGA for Host machine as a
  #         reference.
  # RETURN: If more than one device is reserved for the Host machine, return 0.
  #         If none are reserved, return 1.
  #
    function check_if_host_has_reserved_devices
    {
      log_stdout "${0}: ${FUNCNAME}"

      if ! is_enum_not_empty "${1}" &> /dev/null \
        && ! is_enum_not_empty "${2}" &> /dev/null; then
        print_error_to_log "No devices reserved for Host machine."
        return 1
      fi

      log_stdout "One or more devices reserved for Host machine."
      return 0
    }

  #
  # DESC:   Determine if any devices are reserved for VFIO.
  # $1:     the array of reserved IOMMU groups for VFIO as a reference.
  # $2:     the array of reserved IOMMU groups with VGA for VFIO as a reference.
  # RETURN: If more than one is reserved for VFIO, return 0.
  #         If none are reserved, return 1.
  #
    function check_if_vfio_has_reserved_devices
    {
      log_stdout "${0}: ${FUNCNAME}"

      if ! is_enum_not_empty "${1}" &> /dev/null \
        && ! is_enum_not_empty "${2}" &> /dev/null; then
        print_error_to_log "No devices reserved for VFIO."
        return 1
      fi

      log_stdout "One or more devices reserved for VFIO."
      return 0
    }

  #
  # DESC:   Reserve the given IOMMU group for the Host machine.
  # $1:     the array of reserved IOMMU groups for Host machine as a reference.
  # $2:     the array of reserved IOMMU groups with VGA for Host machine as a
  #         reference.
  # $3:     the IOMMU group ID as an int.
  # RETURN: If IOMMU group ID is valid, return 0.
  #         If not valid, return 1.
  #
    function do_reserve_iommu_group_for_host
    {
      log_stdout "${0}: ${FUNCNAME}"

      local -n arr_iommu_groups_for_host="${1}"
      local -n arr_iommu_groups_with_vga_for_host="${2}"
      local -ir int_iommu_group_id="${3}"
      arr_iommu_groups_for_host+=( "${int_iommu_group_id}" )

      if does_iommu_group_have_external_devices "${int_iommu_group_id}"; then
        return 1
      fi

      if ! does_iommu_group_have_vga_device "${int_iommu_group_id}" &> /dev/null; then
        arr_iommu_groups_for_host+=( "${int_iommu_group_id}" )
      else
        arr_iommu_groups_with_vga_for_host+=( "${int_iommu_group_id}" )
      fi

      log_stdout "Reserved IOMMU group '${int_iommu_group_id}' for Host "\
        "machine."

      return 0
    }

  #
  # DESC:   Reserve the given IOMMU group for VFIO.
  # $1:     the array of reserved IOMMU groups for VFIO as a reference.
  # $2:     the array of reserved IOMMU groups with VGA for VFIO as a reference.
  # $3:     the IOMMU group ID as an int.
  # RETURN: If IOMMU group ID is valid, return 0.
  #         If not valid, return 1.
  #
    function do_reserve_iommu_group_for_vfio
    {
      log_stdout "${0}: ${FUNCNAME}"

      local -n arr_iommu_groups_for_vfio="${1}"
      local -n arr_iommu_groups_with_vga_for_vfio="${2}"
      local -ir int_iommu_group_id="${3}"
      arr_iommu_groups_for_vfio+=( "${int_iommu_group_id}" )

      if does_iommu_group_have_vga_device "${int_iommu_group_id}" &> /dev/null; then
        arr_iommu_groups_with_vga_for_vfio+=( "${int_iommu_group_id}" )
      fi

      print_output_to_log "Reserved IOMMU group '${int_iommu_group_id}' for VFIO."
      return 0
    }

  #
  # DESC:   Prompt to select a given IOMMU group from list.
  # $1:     the array of IOMMU group IDs as a reference.
  # $2:     the array of reserved IOMMU groups for Host as a reference.
  # $3:     the array of reserved IOMMU groups with VGA for Host as a reference.
  # $4:     the array of reserved IOMMU groups for VFIO as a reference.
  # $5:     the array of reserved IOMMU groups with VGA for VFIO as a reference.
  # RETURN: If one or more arrays are not valid, return 1.
  #         Else, return 0.
  #
    function do_select_iommu_group_collection
    {
      log_stdout "${0}: ${FUNCNAME}"

      if ! is_array "${1}"; then
        log_stderr "Missing array reference for IOMMU group IDs."
        return 1
      fi

      if ! is_array "${2}"; then
        log_stderr "Missing array reference for Host machine IOMMU groups."
        return 1
      fi

      if ! is_array "${3}"; then
        log_stderr "Missing array reference for Host machine IOMMU groups "\
          "with VGA."

        return 1
      fi

      if ! is_array "${4}"; then
        log_stderr "Missing array reference for VFIO IOMMU groups."
        return 1
      fi

      if ! is_array "${5}"; then
        log_stderr "Missing array reference for VFIO IOMMU groups with VGA."
        return 1
      fi

      local -n arr_iommu_group_id="${1}"

      if check_if_host_has_reserved_devices "${2}" "${3}" \
        && check_if_vfio_has_reserved_devices "${4}" "${5}"; then
        return 0
      fi

      echo

      for int_iommu_group_id in ${arr_iommu_group_id[@]}; do
        if ! is_iommu_group_id_valid "${1}"; then
          continue
        fi

        print_iommu_group "${int_iommu_group_id}"
        do_select_iommu_group_prompt "${int_iommu_group_id}"
      done

      return 0
    }

  #
  # DESC:   Select or not select a given IOMMU group.
  # $1:     the IOMMU group ID as an int.
  # $2:     the array of reserved IOMMU groups for Host as a reference.
  # $3:     the array of reserved IOMMU groups with VGA for Host as a reference.
  # $4:     the array of reserved IOMMU groups for VFIO as a reference.
  # $5:     the array of reserved IOMMU groups with VGA for VFIO as a reference.
  # $6:     do select the IOMMU group.
  # RETURN: If IOMMU group ID is valid, return 0.
  #         If not valid, return 1.
  #
    function do_select_iommu_group_prompt
    {
      log_stdout "${0}: ${FUNCNAME}"

      if ! is_iommu_group_id_valid "${1}"; then
        return 1
      fi

      local -ir int_iommu_group_id="${1}"
      local bool_do_select=false

      if ! is_bool "${6}" &> /dev/null; then
        if ! ask_yes_or_no "Select IOMMU group "\
          "${SRC_PRINT_STR_SET_COLOR_YELLOW}${int_iommu_group_id}"\
          "${SRC_PRINT_STR_RESET_COLOR}?"; then
          bool_do_select=false
        else
          bool_do_select=true
        fi
      else
        bool_do_select="${2}"
      fi

      if "${bool_do_select}"; then
        do_reserve_iommu_group_for_vfio "${int_iommu_group_id}" "${4}" "${5}"
      else
        do_reserve_iommu_group_for_host "${int_iommu_group_id}" "${2}" "${3}"
      fi

      echo
      return 0
    }

  #
  # DESC:   Print all devices within an IOMMU group.
  # $1:     the IOMMU group ID as an int.
  # RETURN: If IOMMU group ID is valid, return 0.
  #         If not valid, return 1.
  #
    function print_iommu_group
    {
      log_stdout "${0}: ${FUNCNAME}"

      if ! is_iommu_group_id_valid "${1}"; then
        return 1
      fi

      local -ir int_iommu_group_id="${1}"

      local -ar arr_device_list="$( \
        eval "${SRC_IOMMU_PARSE_STR_GET_DEVICES_FOR_IOMMU_GROUP}" \
      )"

      for str_device in ${arr_devices[@]}; do
        is_device_external "${str_device}" && \
          print_iommu_group_device "${str_device}"
      done

      return 0
    }

  #
  # DESC:   Print all relevant info about a device.
  # $1:     the device info as a string
  # RETURN: If device info is not null, return 0. If null, return 1.
  #
    function print_iommu_group_device
    {
      log_stdout "${0}: ${FUNCNAME}"

      local -r str_device="${1}"

      if ! is_string "${str_device}" &> /dev/null; then
        return 1
      fi

      local str_class \
        str_driver \
        str_hwid \
        str_name \
        str_vendor

      get_device_class        "${str_device}" "str_class"
      get_device_driver       "${str_device}" "str_driver"
      get_device_hardware_id  "${str_device}" "str_hwid"
      get_device_name         "${str_device}" "str_name"
      get_device_vendor       "${str_device}" "str_vendor"

      if ! is_string "${str_driver}" &> /dev/null; then
        str_driver="N/A"
      fi

      echo -e "\tSlot ID:\t${str_device}\n"\
              "\tVendor name:\t${str_vendor}\n"\
              "\tDevice name:\t${str_name}\n"\
              "\tClass/Type:\t${str_class}\n"\
              "\tHardware ID:\t${str_hwid}\n"\
              "\tDriver:\t\t${str_driver}\n"

      return 0
    }