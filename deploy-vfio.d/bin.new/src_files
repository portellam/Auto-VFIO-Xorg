#!/bin/false

#
# Filename:       src_files
# Description:    File read/write and validation.
# Author(s):      Alex Portell <github.com/portellam>
# Maintainer(s):  Alex Portell <github.com/portellam>
#

#
# TODO:
# - [ ] test.
#

#
# sources
#
  declare -g SRC_STR_SCRIPT_DIR="/usr/local/bin/"
  declare -g SRC_STR_SCRIPT_BIN_DIR="${SRC_STR_SCRIPT_DIR}deploy-vfio.d/"

  source "${SRC_STR_SCRIPT_BIN_DIR}src_print"

#
# logic
#
  #
  # DESC:   Create temp file of given file.
  # $1:     the file name as a string.
  # RETURN: If temp file creation is successful, return 0.
  #         If false, return 1.
  #
    function create_temp_file_of_file
    {
      log_stdout "${0}: ${FUNCNAME}"

      if is_file "${1}" &> /dev/null; then
        print_output_to_log "File exists."
        return 0
      fi
      local -r str_file_name="${1}"
      local -r str_temp_file_name="${str_file_name}.tmp"

      if ! cp --force "${str_file_name}" "${str_temp_file_name}"; then
        print_error_to_log "Could not create temp file of '${str_file_name}'."
        return 1
      fi

      log_stdout "Created temp file of '${str_file_name}'."
      return 0
    }

  #
  # DESC:   Copy the temp file to the given file.
  # $1:     the file name as a string.
  # RETURN: If file overwrite is successful, return 0.
  #         If false, return 1.
  #
    function copy_temp_file_to_file
    {
      log_stdout "${0}: ${FUNCNAME}"

      if is_file "${1}" &> /dev/null; then
        log_stdout "Skipped overwrite of file."
        return 0
      fi

      local -r str_file_name="${1}"
      local -r str_temp_file_name="${str_file_name}.tmp"

      if ! is_file "${str_temp_file_name}"; then
        return 1
      fi

      if ! cp --force "${str_temp_file_name}" "${str_file_name}"; then
        print_error_to_log "Could not overwrite file '${str_file_name}'."
        return 1
      fi

      log_stdout "Overwrote file '${str_file_name}'."
      return 0
    }

  #
  # DESC:   Copy first file to second file.
  # $1:     the file name as a string.
  # $2:     the file name as a string.
  # RETURN: If file copy is successful, return 0.
  #         If false, return 1.
  #
    function copy_this_file_to_other_file
    {
      log_stdout "${0}: ${FUNCNAME}"

      if ! is_string "${2}" &> /dev/null; then
        print_error_to_log "Invalid filename."
        return 1
      fi

      if ! is_file "${1}"; then
        return 1
      fi

      if ! is_file "${1}" \
        || cp --force "${1}" "${2}"; then
        print_error_to_log "Failed to copy file '${1}' to file '${2}'."
        return 1
      fi

      log_stdout "Copied file '${1}' to file '${2}'."
      return 0
    }

  #
  # DESC:   Delete the temp file of the given file.
  # $1:     the file name as a string.
  # RETURN: If temp file deletion is successful, return 0.
  #         If false, return 1.
  #
    function delete_temp_file_of_file
    {
      log_stdout "${0}: ${FUNCNAME}"

      if is_file "${1}" &> /dev/null; then
        return 0
      fi

      local -r str_file_name="${1}"
      local -r str_temp_file_name="${str_file_name}.tmp"

      if is_file "${str_temp_file_name}" &> /dev/null; then
        return 0
      fi

      if ! rm --force --recursive "${str_temp_file_name}"; then
        print_error_to_log "Could not delete temp file '${str_temp_file_name}'."
        return 1
      fi

      log_stdout "Deleted temp file '${str_temp_file_name}'."
      return 0
    }

  #
  # DESC:   Is directory valid.
  # $1:     the directory name as a string.
  # RETURN: If directory is valid, return 0.
  #         If false, return 1.
  #
    function is_dir
    {
      log_stdout "${0}: ${FUNCNAME}"

      if [[ -z "${1}" ]] \
        || [[ ! -d "${1}" ]]; then
        print_error_to_log "Folder does not exist."
        return 1
      fi

      log_stdout "Folder does not exist."
      return 0
    }

  #
  # DESC:   Is directory not empty.
  # $1:     the directory name as a string.
  # RETURN: If directory is not empty, return 0.
  #         If false, return 1.
  #
    function is_dir_not_empty
    {
      log_stdout "${0}: ${FUNCNAME}"

      if ! is_dir "${1}"; then
        return 1
      fi

      if ! ls --almost-all "${1}" | head --lines 1 &> /dev/null; then
        print_error_to_log "Folder is empty."
        return 1
      fi

      log_stdout "Folder is not empty."
      return 0
    }

  #
  # DESC:   Is file valid.
  # $1:     the file name as a string.
  # RETURN: If file is valid, return 0.
  #         If false, return 1.
  #
    function is_file
    {
      log_stdout "${0}: ${FUNCNAME}"

      if [[ -z "${1}" ]] \
        || [[ ! -e "${1}" ]]; then
        print_error_to_log "File does not exist."
        return 1
      fi

      log_stdout "File does exist."
      return 0
    }

  #
  # DESC:   If file not empty.
  # $1:     the file name as a string.
  # RETURN: If file is not empty, return 0.
  #         If false, return 1.
  #
    function is_file_not_empty
    {
      log_stdout "${0}: ${FUNCNAME}"

      if [[ -z "${1}" ]] \
        || [[ ! -s "${1}" ]]; then
        print_error_to_log "File is empty."
        return 1
      fi

      log_stdout "File is not empty."
      return 0
    }

  #
  # DESC:   Overwrite file with contents of enum.
  # $1:     the reference of the output as an enum.
  # $2:     the file name as a string.
  # RETURN: If enum is not empty and write is successful, return 0.
  #         If false, return 1.
  #
    function overwrite_file
    {
      log_stdout "${0}: ${FUNCNAME}"

      local -n ref_enum_output="${1}"
      local -n str_file_name="${2}"

      if ! is_enum_not_empty "ref_enum_output" \
        || ! sudo echo -e "${ref_enum_output[*]}" > "${str_file_name}"; then
        print_error_to_log "Could not overwrite file '${str_file_name}'."
        return 1
      fi

      log_stdout "Overwrote file '${str_file_name}'."
      return 0
    }

  #
  # DESC:   Write to file with contents of enum.
  # $1:     the reference of the output as an enum.
  # $2:     the file name as a string.
  # RETURN: If enum is not empty and write is successful, return 0.
  #         If false, return 1.
  #
    function write_file
    {
      log_stdout "${0}: ${FUNCNAME}"

      if ! is_file "${2}" \
        || [[ -z "${1}" ]]; then
        return 1
      fi

      local -nr ref_enum_lines="${1}"
      local -r str_file_name="${2}"

      for str_line in ${ref_enum_lines[*]}; do
        if ! sudo echo -e "${str_line}" >> "${str_file_name}"; then
          print_error_to_log "Could not write to file '${str_file_name}'."
          return 1
        fi
      done

      log_stdout "Wrote to file '${str_file_name}'."
      return 0
    }