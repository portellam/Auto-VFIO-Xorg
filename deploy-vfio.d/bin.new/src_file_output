#!/bin/false

#
# Filename:       src_file_output
# Description:    Project specific file output.
# Author(s):      Alex Portell <github.com/portellam>
# Maintainer(s):  Alex Portell <github.com/portellam>
#

#
# sources
#
  declare -g SCRIPT_DIR="/usr/local/bin/"
  declare -g SCRIPT_BIN_DIR="${SCRIPT_DIR}deploy-vfio.d/"

  source "${SCRIPT_BIN_DIR}src_print"

#
# setter logic
#
  #
  # DESC: globals
  #
    function set_globals
    {
      if [[ "${BOOL_SRC_FILE_OUTPUT_SET_GLOBALS}" == true ]]; then
        return 0
      fi

      declare -g BOOL_SRC_FILE_OUTPUT_SET_GLOBALS=true

      # NOTE: update this value if this project exists on a new fork.
      declare -gr STR_REPO_NAME="portellam"

      # NOTE: Added this parameter, to prevent VSCodium IDE from showing visual 
      # errors when a string contains a comment variable.
      declare -g STR_PREFIX_COMMENT="#"

      declare -gr STR_BIN_PATH="/usr/local/bin/${SCRIPT_NAME}.d/"                         # TODO: update this param name across other sources.
      declare -gr STR_ETC_BACKUPS_PATH="/usr/local/etc/${SCRIPT_NAME}.d/"                 # TODO: update this param name across other sources.

      declare -gar DISCLAIMER_FILE_CONTENTS=(
        "${STR_PREFIX_COMMENT} Generated by '${STR_REPO_NAME}/${STR_SCRIPT_NAME}'"
        "${STR_PREFIX_COMMENT} WARNING: Any modifications to this file will be " \
          "modified by '${STR_SCRIPT_NAME}'"
        "${STR_PREFIX_COMMENT}"
      )
    }

#
# main logic
#
  set_globals
  unset set_globals