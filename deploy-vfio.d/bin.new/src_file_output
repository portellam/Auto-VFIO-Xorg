#!/bin/false

#
# Filename:       src_file_output
# Description:    Project specific file output.
# Author(s):      Alex Portell <github.com/portellam>
# Maintainer(s):  Alex Portell <github.com/portellam>
#

#
# sources
#
  declare -g SRC_STR_SCRIPT_DIR="/usr/local/bin/"
  declare -g SRC_STR_SCRIPT_BIN_DIR="${SRC_STR_SCRIPT_DIR}deploy-vfio.d/"

  source "${SRC_STR_SCRIPT_BIN_DIR}src_print"

#
# setter logic
#
  #
  # DESC: globals
  #
    function set_globals
    {
      if [[ "${SRC_FILE_BOOL_OUTPUT_SET_GLOBALS}" == true ]]; then
        return 0
      fi

      declare -g SRC_FILE_BOOL_OUTPUT_SET_GLOBALS=true

      # NOTE: update this value if this project exists on a new fork.
      declare -gr SRC_FILE_STR_REPO_NAME="portellam"

      # NOTE: Added this parameter, to prevent VSCodium IDE from showing visual
      # errors when a string contains a comment variable.
      declare -g SRC_FILE_STR_PREFIX_COMMENT="#"

      declare -gr SRC_FILE_STR_BIN_PATH="/usr/local/bin/" + \
        "${SRC_PRINT_STR_SCRIPT_NAME}.d/"                                             # TODO: update this param name across other sources.

      declare -gr SRC_FILE_STR_ETC_BACKUPS_PATH="/usr/local/etc/" + \
        "${SRC_PRINT_STR_SCRIPT_NAME}.d/"                                             # TODO: update this param name across other sources.

      declare -gar SRC_FILE_ARR_DISCLAIMER_FILE_CONTENTS=(
        "${SRC_FILE_STR_PREFIX_COMMENT} Generated by '${SRC_FILE_STR_REPO_NAME}/" + \
          "${SRC_FILE_STR_SCRIPT_NAME}'"

        "${SRC_FILE_STR_PREFIX_COMMENT} WARNING: Any modifications to this file " + \
          "will be modified by '${SRC_FILE_STR_SCRIPT_NAME}'"

        "${SRC_FILE_STR_PREFIX_COMMENT}"
      )
    }

#
# main logic
#
  set_globals
  unset set_globals