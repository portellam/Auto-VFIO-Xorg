#

#
# TODO:
# - [ ] test.
#


#
# sources
#
  declare -g SRC_STR_SCRIPT_DIR="/usr/local/bin/"
  declare -g SRC_STR_SCRIPT_BIN_DIR="${SRC_STR_SCRIPT_DIR}deploy-vfio.d/"

  source "${SRC_STR_SCRIPT_BIN_DIR}src_print"

#
# logic
#
  #
  # DESC: Pings Internet IP addresses and domain names.
  # RETURN: If pings are successful return 0. If false, return 1.
  #
    function do_ping_internet
    {
      log_stdout "${0}: ${FUNCNAME}"

      print_output_to_log "Checking connection to Internet..."

      if ! do_ping_server "8.8.8.8" \
        && ! do_ping_server "8.8.4.4"; then
        print_error_to_log "Failed to ping IP addresses."
        return 1
      fi

        if ! do_ping_server "www.google.com"; then
          print_error_to_log "Failed to resolve domain names."
        return 1
      fi
    }

  #
  # DESC:   Pings given address.
  # $1:     the server address
  # RETURN: If ping is successful, return 0. If false, return 1.
  #
    function do_ping_server
    {
      log_stdout "${0}: ${FUNCNAME}"

      ping "${1}" -c 1 &> /dev/null
    }

  #
  # DESC:   Check if the Host machine is connected to the Internet.
  # $1:     true/false ignore the outcome and return 0.
  # RETURN: If the Host machine is connected to the Internet, return 0.
  # If false, return 1.
  #
    function is_connected_to_internet
    {
      log_stdout "${0}: ${FUNCNAME}"

      local bool_do_ignore=false

      if is_bool "${1}" &> /dev/null; then
        bool_do_ignore="${1}"
      fi

      if ! do_ping_internet; then
        print_output_to_log "Disconnected."

        if "${bool_do_ignore}" \
          || ask_yes_or_no "Ignore and continue?"; then
          print_output_to_log "Continuing."
          return 0;
        fi

        print_error_to_log "Stopping."
        return 1
      fi

      print_output_to_log "Connected."
      return 0
    }